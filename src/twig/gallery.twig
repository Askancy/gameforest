{% extends "base.twig" %}

{% block js %}
    <script src="plugins/lazysizes/lazysizes.min.js"></script>
{% endblock %}

{% block body %}
    <section class="bg-image text-white bg-dark py-5 py-lg-7 px-3 px-lg-0" ya-style="background-color: #373738">
        <img class="background" src="https://static.giantbomb.com/uploads/original/0/7772/3028605-nibellion_2018-jun-12+1.jpg" alt="" ya-style="opacity: .25">
        <div class="container">
            <div class="row align-items-center text-center text-sm-left">
                <div class="col-lg-10">
                    <h1 class="display-6 text-white font-weight-bold mb-3">Marvel's Spider-Man</h1>
                    <p class="text-light">An Insomniac game exclusively for PlayStation 4 where Spider-Man strives to stop Mister <br>Negative's terrorist plot against the city of New York.</p>
                    <div class="mt-4 pt-2">
                        <a class="btn btn-primary btn-shadow btn-rounded btn-lg" href="#" role="button">Open Gallery</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-white border-bottom py-0" ya-sticky>
        <div class="container">
            <div class="row">
                <div class="col d-flex align-items-center">
                    <div class="nav-scroll">
                        <div class="nav nav-list">
                            <a class="nav-item nav-link" href="#">Marvel's Spider-Man</a>
                            <a class="nav-item nav-link" href="#">Reviews (14)</a>
                            <a class="nav-item nav-link active" href="#">Images</a>
                            <a class="nav-item nav-link" href="#">Videos (8)</a>
                            <a class="nav-item nav-link" href="#">Streams</a>
                            <a class="nav-item nav-link" href="#">Forums</a>
                            <a class="nav-item nav-link" href="#">Shop</a>
                        </div>
                    </div>
                    <div class="btn-group ml-auto d-none d-md-inline-flex mr-2">
                        <a class="btn btn-default btn-icon" href=""><i class="ya ya-small-left"></i></a>
                        <a class="btn btn-default btn-icon" href=""><i class="ya ya-small-right"></i></a>
                    </div>
                    <a class="btn btn-default btn-icon d-none d-md-inline-block" href=""><i class="ya ya-gear"></i></a>
                </div>
            </div>
        </div>
    </section>

    <section class="mt-1 pb-0">
        <div class="container">
            <div class="row">
                <div class="col">
                    <form class="form-inline">
                        <button class="btn btn-light d-none d-md-inline-block mr-2" type="button" name="button" data-toggle="tooltip" title="refresh" data-placement="bottom"><i class="ya ya-refresh ml-0"></i></button>
                        <div class="input-group mb-2 mb-md-0">
                            <input type="text" class="form-control form-control-inline" placeholder="Search in gallery...">
                            <div class="input-group-append">
                                <button type="button" class="btn btn-light btn-icon border-left-0"><i class="ya ya-search"></i></button>
                            </div>
                        </div>
                        <div class="dropdown ml-md-auto">
                            <button class="btn btn-light btn-icon-left dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Recent Images
                            </button>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item active" href="#">Recent</a>
                                <a class="dropdown-item" href="#">Oldest</a>
                                <a class="dropdown-item" href="#">Popular</a>
                                <a class="dropdown-item" href="#">Random</a>
                            </div>
                        </div>
                        <button type="button" class="btn btn-light btn-icon ml-auto ml-md-2" data-toggle="tooltip" title="random" data-placement="bottom"><i class="ya ya-random"></i></button>
                        <div class="btn-group ml-2" role="group">
                            <button type="button" class="btn btn-light btn-icon"><i class="ya ya-list"></i></button>
                            <button type="button" class="btn btn-light btn-icon"><i class="ya ya-table"></i></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <section class="pb-5">
        <div class="container">
            <div class="row row-sm">
                {% for img in gallery %}
                    <div class="col-md-4">
                        <figure class="figure">
                            <a href="{{ img.large }}" ya-lightbox="disqus: true" rel="gallery">
                                <img class="lazyload" data-src="{{ img.image }}" class="figure-img" alt="">
                            </a>
                        </figure>
                    </div>
                {% endfor %}
            </div>
            <a class="btn btn-outline btn-block mt-2" href="#" role="button">Load More</a>
        </div>
    </section>
{% endblock %}
