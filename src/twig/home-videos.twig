                        <img class="lazyload" data-src="https://static.giantbomb.com/uploads/original/5/56742/3053495-0981309717-rdr2-.jpg" alt="">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="py-6">
        <div class="container">
            <div class="row">
                <div class="col-8 mx-auto text-center mb-4">
                    <i class="ya ya-player icon"></i>
