{% extends "base.twig" %}

{% set page = {
    class: 'page-lg'
}%}

{% block js %}
    <script src="plugins/lazysizes/lazysizes.min.js"></script>
{% endblock %}

{% block body %}
    <section class="bg-image py-5" ya-style="background-color: #282a2b">
        <img class="background" src="https://static.giantbomb.com/uploads/original/5/56742/3053495-0981309717-rdr2-.jpg" alt="" ya-style="opacity: .3">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="embed-icon-dark" ya-embed="https://vimeo.com/284295451" ya-title="Red Dead Redemption 2: Epic &amp; Brutal Gameplay Moments" ya-length="15:05">
