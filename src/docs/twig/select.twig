                <h6 class="card-header">{{ docs.blocks[3]['title'] }}</h6>
                <div class="card-body">
                    {{ docs.blocks[3]['code'] }}
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card card-default mb-0">
