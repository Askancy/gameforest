{% extends "base.twig" %}


{% block body %}
    <nav class="bg-white border-bottom" aria-label="breadcrumb">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Faq</li>
            </ol>
        </div>
    </nav>

    <section class="pt-6 pb-5">
        <div class="container">
            {# <div class="row">
                <div class="col-8 mx-auto text-center mb-6">
                    <i class="ya ya-question icon"></i>
                    <h2 class="h1 mb-3">Questions &amp; Answers</h2>
                    <p class="mb-0">Resolution possession discovered surrounded advantages has but few add. Yet walls <br>times spoil put be it reserved contempt rendered smallest.</p>
                </div>
            </div> #}
            <div class="row">
                <div class="col-3">
                    <div class="widget widget-secondary">
                        <div class="widget-header">Faq</div>
                        <div class="widget-body p-0">
                            <div class="list-group list-group-lg list-group-flush">
                                <a class="list-group-item" href="#"><i class="ya ya-content"></i> Introduction</a>
                                <a class="list-group-item active" href="#"><i class="ya ya-gear"></i> Account Settings <span class="badge badge-secondary badge-pill">25</span></a>
                                <a class="list-group-item" href="#"><i class="ya ya-users"></i> Subscriptions</a>
                                <a class="list-group-item" href="#"><i class="ya ya-credit-card"></i> Payment Methods</a>
                            </div>
                        </div>
                    </div>
                    <!-- end .widget -->
                </div>
                <div class="col-9 pl-4">
                    {% for faq in faq %}
                        {% set index = loop.index %}
                        <div id="{{ faq.category|lower|replace({' ': "-", ':': "", '.': ""}) }}" class="accordion mb-4">
                            <div class="accordion-header">{{ faq.category }}</div>
                            {% for item in faq.answer %}
                                <div class="accordion-item">
                                    <a class="accordion-link{% if (index == 1) and (loop.index == 1) %}{% else %} collapsed{% endif %}" href="#collapse{{ faq.category|lower|replace({' ': "-", ':': "", '.': ""}) ~ loop.index }}" data-toggle="collapse" aria-expanded="{% if (index == 1) and (loop.index == 1) %}true{% else %}false{% endif %}" data-target="#collapse{{ faq.category|lower|replace({' ': "-", ':': "", '.': ""}) ~ loop.index }}" aria-controls="collapse{{ faq.category|lower|replace({' ': "-", ':': "", '.': ""}) ~ loop.index }}">{{ item.title }}</a>
                                    <div class="collapse{% if (index == 1) and (loop.index == 1) %} show{% endif %}" id="collapse{{ faq.category|lower|replace({' ': "-", ':': "", '.': ""}) ~ loop.index }}">
                                        <p class="accordion-text">{{ item.text }}</p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        <!-- end list-group -->
                        {% if loop.index == 1 %}
                            <div class="alert alert-primary mb-4">
                                <i class="ya ya-user-add mr-1"></i> Join to our <a class="alert-link" href="register.html">community</a>, submit feature requests and feedbacks!
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
