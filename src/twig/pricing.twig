{% extends "base.twig" %}

{% block body %}
    <section class="py-6">
        <div class="container">
            <div class="row">
                <div class="col-10 mx-auto text-center mb-5">
                    <i class="ya ya-users icon"></i>
                    <h2 class="display-6 mb-3">Join to gameforest community!</h2>
                    <p class="mb-0">Resolution possession discovered surrounded advantages has but few add. Yet walls times spoil.</p>
                </div>
            </div>
            <div class="row">
                {% for price in pricing %}
                    <div class="col-4">
                        <div class="card card-price">
                            <div class="card-body pb-3">
                                <h6 class="mb-4">{{ price.title }}</h6>
                                <div class="display-4 font-weight-bold{% if loop.index == 2 %} text-primary{% endif %}">{{ price.price }}</div>
                                <span class="border-bottom-dashed pb-3 mt-2 mb-4 d-inline-block">per user / month</span>
                                <ul class="list-unstyled">
                                    {% for list in price.plan %}
                                        <li><i class="ya {% if list.access %}ya-check text-success{% else %}ya-times-circle text-danger{% endif %}"></i> {{ list.title }}</li>
                                    {% endfor %}
                                </ul>
                                <small class="text-muted">View fine me gone this name an rank.</small>
                            </div>
                            <div class="card-footer">
                                <button type="button" class="btn {% if loop.index == 2 %}btn-primary{% else %}btn-outline{% endif %} btn-block">Sign up</button>
                            </div>
                        </div>
                        <!-- end .card -->
                    </div>
                {% endfor %}
            </div>
            <div class="row">
                <div class="col text-center">
                    <p class="mt-5 text-muted font-size-md">Do you need extra space and more premium content? <a class="link" href="#">Sign up for one of our free plans</a> <br>for unlimited public and open source projects.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-white border-top py-5">
        <div class="container">
            <div class="row">
                <div class="col-8 mx-auto text-center mb-4">
                    <i class="ya ya-helmet icon"></i>
                    <h2 class="font-weight-bold font-size-lg">Frequently asked questions</h2>
                    <p>Resolution possession discovered surrounded advantages has but few add. Yet walls times spoil put be it reserved contempt rendered smallest.</p>
                </div>
            </div>
            <div class="row">
                <div class="col-11 mx-auto">
                    <div class="row">
                        {% for faq in faq %}
                            {% for faq in faq['Account Settings'] %}
                                {% if loop.index < 7 %}
                                    <div class="col-6 card-group">
                                        <div class="card card-default mb-4">
                                            <h6 class="card-header">{{ faq.title }}</h6>
                                            <div class="card-body">
                                                <p class="card-text">{{ faq.text|slice(0, 160) }}...</p>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="text-center mt-3">
                <a class="btn btn-secondary btn-lg" href="faq.html" role="button">Learn more</a>
            </div>
        </div>
    </section>

    <section class="bg-primary py-0">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="promo py-4">
                        <h2 class="promo-title h5 mr-4">Learn more about why we recommend to upgrade your account to pro or elite!</h2>
                        <a class="btn btn-outline-light" href="#" role="button">Read more</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
