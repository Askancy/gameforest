{% extends "base.twig" %}

{% block css %}
    <link rel="stylesheet" href="plugins/flatpickr/flatpickr.min.css">
    <link rel="stylesheet" href="plugins/bootstrap-select/css/bootstrap-select.min.css">
{% endblock %}

{% block js %}
    <script src="plugins/flatpickr/flatpickr.min.js"></script>
    <script src="plugins/ckeditor/ckeditor.js"></script>
    <script src="plugins/bootstrap-select/js/bootstrap-select.min.js"></script>
    <script>
        $(function() {
            ClassicEditor.create( document.querySelector( '#editor' ));
            $('.selectpicker').selectpicker();
            $(".datepicker").flatpickr({allowInput:true, wrap: true});
            $(".timepicker").flatpickr({noCalendar: true, enableTime: true, dateFormat: "H:i", allowInput:true, wrap: true});
        });
    </script>
{% endblock %}

{% block body %}
    <section class="bg-primary">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="d-flex align-items-center py-3">
                        <h2 class="h3 font-weight-semibold text-white mb-0 mr-auto">Create topic</h2>
                        <a class="btn btn-outline-light" href="forums.html" role="button">Back to forum</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <nav class="bg-white border-bottom" aria-label="breadcrumb">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="forums.html">Forums</a></li>
                <li class="breadcrumb-item active" aria-current="page">Create</li>
            </ol>
        </div>
    </nav>

    <section class="py-lg-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-9">
                    <div class="form-group pb-1">
                        <label for="title">Topic Title</label>
                        <input type="text" class="form-control" id="title" placeholder="Enter title" required>
                        <small class="form-text text-muted">Title of the topic what will be visible in forum (max 50 character).</small>
                    </div>
                    <div class="form-group pb-1">
                        <label for="description">Short Description</label>
                        <input type="text" class="form-control" id="description" placeholder="Enter description">
                    </div>
                    <div class="form-group ckeditor ckeditor-lg">
                        <textarea name="content" id="editor"></textarea>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="row row-md mb-3">
                        <div class="col-6">
                            <button type="button" class="btn btn-outline btn-block">Preview</button>
                        </div>
                        <div class="col-6">
                            <button type="button" class="btn btn-primary btn-block" ya-notify="alert: success;align: bottom-right" ya-title="You have successfully added a new topic!">Publish...</button>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label>Image</label>
                        <div class="dropload">
                            <div>
                                <i class="ya ya-image-add"></i>
                                <p class="dropload-text">Add image</p>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label for="exampleFormControlSelect1">Forum</label>
                        <select id="exampleFormControlSelect1" class="form-control selectpicker w-100">
                            <option>Select forum</option>
                            <option>General</option>
                            <option>Platforms</option>
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label for="exampleFormControlSelect2">Author</label>
                        <select id="exampleFormControlSelect2" class="form-control selectpicker" data-size="5">
                            <option>admin</option>
                            {% for user in users %}
                                <option>{{ user.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label for="exampleFormControlSelect3">Publish On</label>
                        <div class="row row-xs">
                            <div class="col-6">
                                <div class="input-group datepicker">
                                    <div class="input-group-prepend">
                                        <button type="button" class="btn btn-light border-right-0" data-toggle><i class="ya ya-calendar m-0"></i></button>
                                    </div>
                                    <input type="text" class="form-control" id="exampleSelect3" data-input>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="input-group timepicker">
                                    <div class="input-group-prepend">
                                        <button type="button" class="btn btn-light border-right-0" data-toggle><i class="ya ya-clock m-0"></i></button>
                                    </div>
                                    <input type="text" class="form-control" id="exampleSelect4" data-input>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label>Access</label>
                        <div class="form-group form-check custom-control custom-checkbox mb-1">
                            <input type="checkbox" class="custom-control-input" id="customCheck1">
                            <label class="custom-control-label" for="customCheck1">Registered</label>
                        </div>
                        <div class="form-group form-check custom-control custom-checkbox mb-1">
                            <input type="checkbox" class="custom-control-input" id="customCheck2">
                            <label class="custom-control-label" for="customCheck2">Subscriber</label>
                        </div>
                        <div class="form-group form-check custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="customCheck3">
                            <label class="custom-control-label" for="customCheck3">Administrator</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Options</label>
                        <div class="form-group form-check custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="customCheck4" checked>
                            <label class="custom-control-label" for="customCheck4">Enable replies</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
