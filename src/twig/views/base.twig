<!DOCTYPE html>
<html lang="en">
<head>
    <!-- meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    {% if page.description %}
        <meta name="description" content="{{ page.description }}">
    {% endif %}

    <title>{% if page.title %}{{ page.title ~ ' - ' }}{% endif %}{{ config.title }}</title>

    {% if block("css") is defined %}
        <!-- css: plugins -->
        {% block css %}{% endblock %}
    {% endif %}

    <!-- css: theme -->
    <link rel="stylesheet" href="css/{{ env == 'development' ? 'theme.css' : 'theme.min.css' }}{{ env == 'host' ? '?ver=' ~ config.version : '' }}">
</head>
<body class="{% if (page.navbar != 'static') and (config.navbar == 'fixed') and (page.header != false) %}fixed-navbar{% endif %}{% if page.footer == 'sticky' %} sticky-footer{% endif %}{% if page.class %} {{ page.class }}{% endif %}">
    <div class="site{% if page.center %} d-flex align-items-center{% endif %}">
        {% if page.header != false %}
            <header class="site-header">
                {% include 'header.twig' %}
            </header>
            <!-- end .site-header -->
        {% endif %}

        <div class="site-content{% if page.center %} w-100{% endif %}" role="main">
            {% block body %}{% endblock %}
        </div>
        <!-- end .site-content -->

        {% if page.footer != false %}
            <footer class="site-footer bg-dark">
                {% include 'footer.twig' %}
            </footer>
            <!-- end .site-footer -->
        {% endif %}
    </div>
    <!-- end .site -->

    <!-- js: vendor -->
    <script src="js/vendor.js"></script>
    <script src="js/{{ env == 'development' ? 'theme.js' : 'theme.min.js' }}{{ env == 'host' ? '?ver=' ~ config.version : '' }}"></script>

    {% if block("js") is defined %}
        <!-- js: plugins -->
        {% block js %}{% endblock %}
    {% endif %}

    <!-- theme settings -->
    <script>
        var gameforest = {
            disqus: '{{ config.disqus }}',
            facebook: {
                lang: '{{ config.facebook.lang }}',
                version: '{{ config.facebook.version }}',
                id: '{{ config.facebook.appID }}',
            }
        }
    </script>

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-87018219-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'UA-87018219-1');
    </script>

    <div class="fb-placeholder">
        <a class="btn btn-social btn-facebook btn-icon btn-rounded" href="https://facebook.com/yakuthemes" target="_blank" role="button"><i class="ya ya-facebook"></i></a>
    </div>
</body>
</html>
