{% extends "base.twig" %}

{% block js %}
    <script>
        window.lazySizesConfig = window.lazySizesConfig || {};
        lazySizesConfig.preloadAfterLoad = true;
    </script>
    <script src="plugins/lazysizes/lazysizes.min.js"></script>
{% endblock %}

{% block body %}
    <section class="pt-0 pt-md-2 px-md-2">
        <div class="container-fluid px-xs-0">
            <div class="row">
                <div class="col-lg-11 mx-auto">
                    <div class="owl-carousel" ya-carousel="autowidth: true;dots: false;margin: 8;items: 2">
                        {% for carousel in carousel.magazine %}
                            <div class="owl-img owl-img-md owl-width-md lazyload">
                                <img class="lazyload" data-src="{{ carousel.img }}" alt="">
                                <div class="owl-caption owl-caption-bottom">
                                    <h1 class="owl-title"><a href="">{{ carousel.title }}</a></h1>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-light py-3 border-top border-bottom">
        <div class="container">
            <div class="row row-md">
                {% for post in home.magazine.recent %}
                    <div class="col-sm-4">
                        <div class="card bg-transparent border-0 shadow-none mb-3 mb-sm-0">
                            <a class="card-img img-md mt-0 mx-0" href="{{ post.url }}">
                                <img src="{{ post.img }}" alt="">
                            </a>
                            <div class="card-body pb-0 px-0">
                                <h6 class="card-title"><a href="{{ post.url }}">{{ post.title }}</a></h6>
                            </div>
                        </div>
                        <!-- end .card-post -->
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <div class="d-md-flex mb-4">
                        <div class="dropdown mr-1 mr-md-2 mb-2 mb-md-0">
                            <button class="btn btn-light btn-icon-left dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="ya ya-tag"></i> All
                            </button>
                            <div class="dropdown-menu dropdown-height">
                                <a class="dropdown-item active" href="#">All categories</a>
                                {% for cat in categories %}
                                    <a class="dropdown-item" href="#">{{ cat.title }}</a>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="dropdown mr-auto">
                            <button class="btn btn-light dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Recent posts
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item active" href="#">Recent</a>
                                <a class="dropdown-item" href="#">Oldest</a>
                                <a class="dropdown-item" href="#">Popular</a>
                                <a class="dropdown-item" href="#">Most Comments</a>
                            </div>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-light btn-icon-left dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Descending
                            </button>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item active" href="#">Descending</a>
                                <a class="dropdown-item" href="#">Ascending</a>
                                <a class="dropdown-item" href="#">Random</a>
                            </div>
                        </div>
                        <div class="btn-group ml-1 ml-md-2" role="group">
                            <button type="button" class="btn btn-light"><i class="ya ya-list m-0"></i></button>
                            <button type="button" class="btn btn-light"><i class="ya ya-table m-0"></i></button>
                        </div>
                    </div>
                    {% for blog in blogs_medium %}
                        <div class="post post-medium">
                            <div class="post-thumbnail">
                                {% if blog.url == 'blog-post-video.html' %}
                                    <div class="embed-player">
                                        <img class="post-img" src="{{ blog.thumb }}" alt="">
                                        <div class="embed-icon embed-icon-dark">
                                            <a href="{{ blog.url }}"><i class="ya ya-play"></i></a>
                                        </div>
                                    </div>
                                {% else %}
                                    <img class="post-img" src="{{ blog.thumb }}" alt="{{ blog.title }}">
                                {% endif %}
                            </div>
                            <div class="post-body">
                                <h2 class="post-title h4"><a href="{{ blog.url }}">{{ blog.title }}</a></h2>
                                <div class="post-meta">
                                    <span class="post-meta-item"><i class="ya ya-calendar"></i> {{ blog.meta.date|date(config.dateformat) }}</span>
                                    <a class="post-meta-item" href="{{ blog.url }}"><i class="ya ya-comment"></i> {{ blog.meta.comments }} comments</a>
                                    <span class="post-meta-item"><i class="ya ya-clock"></i> {{ blog.meta.time }} min read</span>
                                </div>
                                <p>{{ blog.text|slice(0, 260) }}...</p>
                            </div>
                        </div>
                        <!-- end .post -->
                    {% endfor %}

                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">4</a></li>
                            <li class="page-item"><a class="page-link" href="#">5</a></li>
                            <li class="page-item gap"><span class="page-link">...</span></li>
                            <li class="page-item"><a class="page-link" href="#">25</a></li>
                            <li class="page-item"><a class="page-link" href="#">Next</a></li>
                        </ul>
                    </nav>
                    <!-- end pagination -->
                </div>
                <div class="col-md-3">
                    <div class="widget">
                        <form action="search.html">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search...">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-light border-left-0"><i class="ya ya-search m-0"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- end widget -->

                    <div class="widget">
                        <div class="widget-header">Recommends</div>
                        {% for blog in home.magazine.recommends %}
                            <a class="img-cover img-sm mb-3" href="{{ blog.url }}">
                                <img src="{{ blog.img }}" alt="">
                            </a>
                            <div class="widget-body">
                                <h5 class="h6"><a href="{{ blog.url }}">{{ blog.title }}</a></h5>
                                <div class="font-size-md font-weight-semibold text-muted mb-2"><i class="ya ya-calendar mr-1"></i> {{ blog.meta.date|date(config.dateformat) }}</div>
                                <p class="mb-0">{{ blog.text|slice(0, 90) }}...</p>
                            </div>
                        {% endfor %}
                    </div>
                    <!-- end widget -->

                    <div class="widget widget-secondary">
                        <div class="widget-header border-0">Categories</div>
                        <div class="list-group list-group-flush">
                            {% for cat in categories %}
                                <a class="list-group-item{{ loop.index == 2 ? ' active' : '' }}" href="#">{{ cat.title }}{% if cat.posts %} <span class="badge badge-secondary badge-pill">{{ cat.posts }}</span>{% endif %}</a>
                            {% endfor %}
                        </div>
                    </div>
                    <!-- end widget -->

                    <div class="widget mb-0">
                        <div class="widget-header">Popular on Gameforest</div>
                        {% for blog in blogs %}
                            {% if loop.index == 4 %}
                                <a class="img-cover img-sm mb-3" href="{{ blog.url }}">
                                    <img src="{{ blog.thumb }}" alt="">
                                </a>
                                <div class="widget-body">
                                    <h5 class="h6"><a href="{{ blog.url }}">{{ blog.title }}</a></h5>
                                    <div class="font-size-md font-weight-semibold text-muted mb-2"><i class="ya ya-calendar mr-1"></i> {{ blog.meta.date|date(config.dateformat) }}</div>
                                    <p class="mb-2">{{ blog.text|slice(0, 90) }}...</p>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <!-- end widget -->

                    <div class="widget widget-list">
                        {% for blog in blogs %}
                            <div class="media">
                                <a class="img-cover" href="#">
                                    <img src="{{ blog.thumb }}" alt="">
                                </a>
                                <div class="media-body">
                                    <h6><a href="#" title="{{ blog.title }}">{{ blog.title|slice(0, 40) }}...</a></h6>
                                    <div class="font-size-sm font-weight-semibold text-muted">{{ blog.meta.date|date(config.dateformat) }}</div>
                                </div>
                            </div>
                        {% endfor %}
                        <a class="btn btn-outline btn-block btn-sm mt-2" href="#" role="button">Load More</a>
                    </div>
                    <!-- end widget -->

                    <div class="widget widget-tags">
                        <div class="widget-header">Popular Tags</div>
                        <div class="tags">
                            <a href="#">#playstation4</a>
                            <a href="#">#anthem</a>
                            <a href="#">#fps</a>
                            <a href="#">#upcoming</a>
                            <a href="#">#gameforest</a>
                            <a href="#">#xbox</a>
                            <a href="#">#gameplay</a>
                            <a href="#">#red-dead</a>
                        </div>
                    </div>
                    <!-- end widget -->
                </div>
            </div>
        </div>
    </section>
{% endblock %}
