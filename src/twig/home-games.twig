{% extends "base.twig" %}

{% block js %}
    <script src="plugins/lazysizes/lazysizes.min.js"></script>
{% endblock %}

{% block body %}
    <section>
        <div class="container-fluid">
            <div class="row">
                <div class="col-11 mx-auto">
                    <div class="owl-carousel owl-height-md" ya-carousel="center: true;autowidth: true;dots: false;margin:10;items: 2">
                        {% for carousel in home.carousel.magazine %}
                            <div class="owl-img lazyload" style="width: 500px;">
                                <img class="lazyload" data-src="{{ carousel.img }}" alt="">
                                <div class="owl-caption owl-caption-bottom">
                                    <h1 class="owl-title"><a href="">{{ carousel.title }}</a></h1>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <div class="row">
                <div class="col">
                </div>
            </div>
        </div>
    </section>
{% endblock %}
