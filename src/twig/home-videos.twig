                </div>
            </div>
            <div class="row row-sm">
                {% for video in videos %}
                    {% if loop.index < 5 %}
                        <div class="col-3 card-group mb-4">
                            <div class="card card-video card-md">
                                <div class="card-img">
                                    <a href="video-post.html">
                                        <img src="https://i1.ytimg.com/vi/{{ video.id }}/maxresdefault.jpg" alt="{{ video.title }}">
                                    </a>
                                    <div class="card-meta">
                                        <span>{{ video.length }}</span>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <h6 class="card-title"><a href="video-post.html">{{ video.title|slice(0, 38) }}</a></h6>
                                    <p class="card-text">{{ video.text|slice(0, 80) ~ '...' }}</p>
                                </div>
                                <div class="card-footer">
                                    <span><i class="ya ya-clock"></i> {{ video.date|date("M d, Y") }}</span>
                                    <span class="ml-auto"><i class="ya ya-eye"></i> {{ video.views }} views</span>
                                </div>
                            </div>
                            <!-- end .card-video -->
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <div class="text-center my-3">
                <a class="btn btn-dark btn-lg" href="videos.html" role="button">More Videos</a>
            </div>
        </div>
    </section>

    <section class="bg-white border-bottom border-top py-6">
        <div class="container-fluid">
            <div class="row">
                <div class="col-11 mx-auto">
                    <div class="row justify-content-around align-items-center">
                        <div class="col-6">
                            <div class="embed-player embed-player-lg">
                                <div class="embed-img">
                                    <img src="https://static.giantbomb.com/uploads/original/5/56742/3058974-3631271585-rdr2-.jpg" alt="">
                                </div>
                                <div class="embed-icon">
                                    <a href="https://www.youtube.com/watch?v=Dw_oH5oiUSE" ya-lightbox>
