{% extends "base.twig" %}

{% set docs = {
    title: 'Progress',
    text: 'Documentation and examples for using Gameforest custom progress bars featuring support for stacked bars, animated backgrounds, and text labels.',
    bootstrap: 'components/progress',
    blocks: [
        {
            title: 'Example',
            text: 'Defines progress bars that indicate how far along a process is.',
            code: '<div class="progress">
    <div class="progress-bar w-75" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
</div>',
        },
        {
            title: 'Backgrounds',
            text: 'Use background utility classes to change the appearance of individual progress bars.',
            code: '<div class="progress mb-3">
    <div class="progress-bar w-25 bg-danger" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
</div>
<div class="progress mb-3">
    <div class="progress-bar w-50 bg-warning" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
</div>
<div class="progress mb-3">
    <div class="progress-bar w-75 bg-primary" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
</div>
<div class="progress">
    <div class="progress-bar w-100 bg-success" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
</div>',
        },
        {
            title: 'Loaded',
            text: 'We can add animation to the progress compontent by using <code>.progress-loaded</code> class with the progress bar.',
            code: '<div class="progress progress-loaded">
    <div class="progress-bar bg-success" style="width: 0" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="57"></div>
</div>',
        },
        {
            title: 'Sizes',
            text: 'Use <code>.progress-lg</code> or <code>.progress-sm</code> for different progress sizes.',
            code: '<div class="progress progress-lg mb-3">
    <div class="progress-bar w-75 bg-success" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
</div>

<div class="progress mb-3">
    <div class="progress-bar w-50" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
</div>

<div class="progress progress-sm">
    <div class="progress-bar w-25 bg-danger" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
</div>',
        },
        {
            title: 'Animated',
            text: 'The striped gradient can also be animated. Add <code>.progress-bar-animated</code> to <code>.progress-bar</code> to animate the stripes right to left via CSS3 animations',
            code: '<div class="progress">
    <div class="progress-bar progress-bar-striped progress-bar-animated w-75" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
</div>',
        },
    ]
} %}

{% set custom %}
    <div class="card card-default mb-4">
        <h6 class="card-header">{{ docs.blocks[0]['title'] }}</h6>
        <div class="card-body">
            {{ docs.blocks[0]['code'] }}
        </div>
    </div>
    <div class="card card-default mb-4">
        <h6 class="card-header">{{ docs.blocks[1]['title'] }}</h6>
        <div class="card-body">
            {{ docs.blocks[1]['code'] }}
        </div>
    </div>
    <div class="card card-default mb-4">
        <h6 class="card-header">{{ docs.blocks[2]['title'] }}</h6>
        <div class="card-body">
            {{ docs.blocks[2]['code'] }}
        </div>
    </div>
    <div class="card card-default mb-0">
        <h6 class="card-header">{{ docs.blocks[3]['title'] }}</h6>
        <div class="card-body">
            {{ docs.blocks[3]['code'] }}
        </div>
    </div>
{% endset %}
