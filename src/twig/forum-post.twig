                                </div>
                            </div>
                        </div>
                        {% for reply in replies %}
                            <div class="card mb-3">
                                {% for user in users %}
                                    {% if loop.index == reply.user %}
                                        <h6 class="card-header">{{ user.name }}</h6>
                                    {% endif %}
                                {% endfor %}
                                <div class="card-body p-4">
                                    <div class="media mt-0">
                                        {% for user in users %}
                                            {% if loop.index == reply.user %}
                                                <div class="avatar avatar-badge">
                                                    <img src="img/{{ user.img }}" alt="{{ user.name }}">
                                                    {% if user.status %}<a class="badge badge-{{ user.status }}" href="#"></a>{% endif %}
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                        <div class="media-body">
                                            <p class="mb-0">{{ reply.text }}</p>
                                        </div>
                                    </div>
                                    <!-- end .media -->
                                </div>
                                <div class="card-footer">
                                    <button class="btn btn-default btn-xs mr-2">Reply</button>
                                    <button class="btn btn-default btn-xs"><i class="ya ya-like ml-0"></i> (25)</button>
                                </div>
                            </div>
