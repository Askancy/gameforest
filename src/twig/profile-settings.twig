{% extends "base.twig" %}

{% block js %}
    <script src="plugins/parallax/parallax.min.js"></script>
{% endblock %}

{% block body %}
    <section class="overflow-hidden py-0" data-parallax="scroll" data-image-src="https://static.giantbomb.com/uploads/original/0/5370/2791736-7947254676-Star_.jpg">
        <div class="overlay" ya-style="background-color: #36373a;opacity: .9"></div>
        <div class="container">
            <div class="row">
                <div class="col">
                    <h2 class="text-white mb-0 py-7 mt-3">Profile Settings</h2>
                </div>
            </div>
            <div class="row">
                    <div class="col d-flex align-items-center">
                    <div class="nav nav-list nav-lighten">
                        <a class="nav-item nav-link active pl-0" href="#">Account settings</a>
                        <a class="nav-item nav-link" href="#">Security</a>
                        <a class="nav-item nav-link" href="#">Access</a>
                        <a class="nav-item nav-link" href="#">History</a>
                        <a class="nav-item nav-link" href="#">Billings</a>
                        <a class="nav-item nav-link" href="#">Premium</a>
                    </div>
                    <a class="btn btn-outline-light btn-icon ml-auto" href="profile.html">View my profile</a>
                </div>
            </div>
        </div>
    </section>

    <section class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-9">
                    <div class="card mb-5">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="avatar-badge avatar-inherit transparent mr-4">
                                    <img src="img/user-1.jpg" alt="">
                                    <span class="badge badge-success"></span>
                                </div>
                                <form>
                                    <label class="custom-file" for="file2">
                                        <input type="file" id="file2" class="custom-file-input d-flex h-0">
                                        <span class="btn btn-primary">Upload</span>
                                    </label>
                                    <small class="d-block mt-3 text-muted">For best results, use an image at least 180px by 180px in either .jpg or .png format</small>
                                </form>
                            </div>
                        </div>
                    </div>
                    <form>
                        <h5 class="font-weight-bold font-size-md text-uppercase mb-4 pb-1">Profile Information</h5>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="username">Username</label>
                                <input type="text" class="form-control" id="username" aria-describedby="usernameHelp" value="Nathan Drake" placeholder="Enter Username">
                                <small id="usernameHelp" class="form-text text-muted">The name what will be visible on community pages.</small>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="name">Name</label>
                                <input type="text" class="form-control" id="name" value="nathan" placeholder="Enter your name">
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="email">Email</label>
                                <div class="input-group">
                                    <input type="email" class="form-control" id="email" aria-describedby="emailHelp" value="nathan@drake.com" placeholder="Enter your email address">
                                    <div class="input-group-append">
                                        <button type="button" class="btn btn-light btn-icon border-left-0" data-toggle="tooltip" title="Enter a valid email address."><i class="ya ya-help-circle"></i></button>
                                    </div>
                                </div>
                                <small id="emailHelp" class="form-text text-muted">Weâ€™ll never share your email with anyone else.</small>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="url">Profile URL</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">yakuthemes.com/</span>
                                    </div>
                                    <input type="text" class="form-control" id="url" placeholder="username" aria-describedby="basic-addon3">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="birthday">Birthday</label>
                                    <select class="custom-select">
                                        <option selected>Open this select menu</option>
                                        <option value="1">One</option>
                                        <option value="2">Two</option>
                                        <option value="3">Three</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">

                                </div>
                            </div>
                        </div>
                        <div class="form-group mb-0">
                            <label for="aboutMe">About me</label>
                            <textarea class="form-control" id="aboutMe" aria-describedby="aboutMeHelp" rows="5"></textarea>
                            <small id="aboutMeHelp" class="form-text text-muted">A short description about yourself and your duty. You can @mention other users and organizations to link to them.</small>
                        </div>
                        <button type="submit" class="btn btn-primary disabled mt-4" disabled>Update profile</button>
                    </form>
                    <!-- end form -->

                    <hr class="my-5">

                    <form>
                        <h5 class="font-weight-bold font-size-md text-uppercase mb-4 pb-1">Change Password</h5>
                        <div class="row">
                            <div class="form-group col-8">
                                <label for="password">Current Password</label>
                                <input type="password" class="form-control" id="password" aria-describedby="passwordHelp" placeholder="Enter Password">
                                <small id="passwordHelp" class="form-text text-muted">Enter your current password into the input area.</small>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group mb-2">
                                    <label for="password1">New Password</label>
                                    <input type="password" class="form-control" id="password1" aria-describedby="password1Help" placeholder="Enter New Password">
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group mb-2">
                                    <label for="password2">Confirm Password</label>
                                    <input type="password" class="form-control" id="password2" aria-describedby="password2Help" placeholder="Confirm Password">
                                </div>
                            </div>
                        </div>
                        <button type="button" class="btn btn-danger mt-4">Change password</button>
                    </form>
                    <!-- end form -->
                </div>
                <div class="col-3">

                </div>
            </div>
        </div>
    </section>
{% endblock %}
