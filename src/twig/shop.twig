{% extends "base.twig" %}

{% block js %}
    <script src="plugins/easypiechart/jquery.easypiechart.min.js"></script>
    <script>
        $(function() {
            $('.easypiechart').easyPieChart();
            $('.form-control').keyup(function() {
                var search = $(this).val().toLowerCase();
                $.each($('.card-title'), function() {
                    if ($(this).text().toLowerCase().indexOf(search) === -1) {
                        $(this).parent().parent().parent().hide();
                    } else {
                        $(this).parent().parent().parent().show();
                    }
                });
            });
        });
    </script>
{% endblock %}

{% block body %}
    <section class="bg-image bg-dark py-7" ya-style="background-color: #343538">
        <img class="background" src="https://img.youtube.com/vi/IZyJlfEVoQg/maxresdefault.jpg" alt="">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-8">
                    <h1 class="text-white font-weight-bold display-5">God of War</h1>
                    <p class="text-light">Kratos now lives as a man in the realm of Norse Gods and monsters. It is in this harsh, unforgiving world that he must fight to survive, and teach his son to do the same.</p>
                    <div class="mt-4 pt-2">
                        <a class="btn btn-primary btn-shadow btn-rounded btn-lg" href="game-post.html" role="button">View Game</a>
                        <a class="btn btn-outline-light btn-rounded btn-lg ml-2" href="https://www.youtube.com/watch?v=gOE2BVRCUkM" ya-lightbox role="button">Watch Trailer</a>
                    </div>
                </div>
                <div class="col-4 d-flex align-items-center justify-content-end text-center">
                    <div>
                        <p class="font-weight-semibold text-white">Gameforest</p>
                        <a class="easypiechart" href="review-post.html" data-percent="89" data-scale-color="#e3e3e3" data-bar-color="#5eb404"><span class="easypiechart-text">89%</span></a>
                    </div>
                    <div class="ml-3">
                        <p class="font-weight-semibold text-white">MetaCritic</p>
                        <a class="review-score" href="review-post.html">9.1</a>
                    </div>
                    <div class="ml-3">
                        <p class="font-weight-semibold text-white">Users</p>
                        <a class="review-score" href="review-post.html">9.4</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-white border-bottom py-3">
        <div class="container">
            <div class="row">
                <div class="col">
                    <form class="form-inline">
                        <button class="btn btn-light mr-2" type="button" name="button" data-toggle="tooltip" title="refresh" data-placement="bottom"><i class="ya ya-refresh ml-0"></i></button>
                        <div class="input-group">
                            <input type="text" class="form-control form-control-inline" placeholder="Search in shop...">
                            <div class="input-group-append">
                                <button type="button" class="btn btn-light border-left-0"><i class="ya ya-search m-0"></i></button>
                            </div>
                        </div>
                        <div class="dropdown ml-auto">
                            <button class="btn btn-light btn-icon-left dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Recent Products
                            </button>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item active" href="#">Recent</a>
                                <a class="dropdown-item" href="#">Oldest</a>
                                <a class="dropdown-item" href="#">Popular</a>
                                <a class="dropdown-item" href="#">Random</a>
                            </div>
                        </div>
                        <button type="button" class="btn btn-light ml-2" data-toggle="tooltip" title="random" data-placement="bottom"><i class="ya ya-random m-0"></i></button>
                        <div class="btn-group ml-2" role="group">
                            <button type="button" class="btn btn-light"><i class="ya ya-list m-0"></i></button>
                            <button type="button" class="btn btn-light"><i class="ya ya-table m-0"></i></button>
                        </div>
                    </form>
                    <!-- end .form-inline -->
                </div>
            </div>
        </div>
    </section>

    <section class="py-5">
        <div class="container">
            <div class="row row-sm">
                {% for game in games %}
                    {% if loop.index < 13 %}
                        <div class="col-3 card-group">
                            <div class="card card-shop mb-4">
                                <a class="card-img" href="shop-product.html">
                                    <img class="card-img-top" src="https://img.youtube.com/vi/{{ game.img }}/maxresdefault.jpg" alt="{{ game.title }}">
                                </a>
                                <div class="card-body d-flex align-items-start flex-column">
                                    <h5 class="card-title mb-auto">
                                        {% if game.released %}
                                            <i class="ya ya-check-circle text-success" data-toggle="tooltip" data-placement="bottom" data-title="Available"></i>
                                        {% endif %}
                                        <a href="game-post.html">{{ game.title }}</a>
                                    </h5>
                                    <ul class="d-flex justify-content-between list-star list-inline font-size-md mr-2 mt-1 mb-0">
                                        <li><i class="ya ya-star text-warning"></i></li>
                                        <li><i class="ya ya-star text-warning"></i></li>
                                        <li><i class="ya ya-star text-warning"></i></li>
                                        <li><i class="ya ya-star text-warning"></i></li>
                                        <li><i class="ya ya-star text-muted"></i></li>
                                    </ul>
                                    <ul class="list-unstyled font-size-sm mt-3">
                                        <li>Platform: Xbox One</li>
                                        <li>Genre: action</li>
                                        <li>Publisher: Rockstar Games</li>
                                    </ul>
                                    <ul class="d-flex list-unstyled mb-0">
                                        <li class="border-right mr-2 pr-2"><i class="ya ya-stock text-success mr-1"></i> in stock</li>
                                        <li><i class="ya ya-delivery text-success mr-1"></i> free delivery</li>
                                    </ul>
                                </div>
                                <div class="card-footer">
                                    <div class="d-flex align-items-center">
                                        <div class="h3 font-weight-normal mb-0 mr-2{% if game.price.discount %} text-danger{% endif %}">${{ game.price.original }}</div>
                                        {% if game.price.discount %}<div class="h6 mb-0 font-weight-light text-light"><s>${{ game.price.original + game.price.discount }}</s></div>{% endif %}
                                    </div>
                                    <button type="button" class="btn btn-outline btn-sm ml-auto">Add to cart <i class="ya ya-shopping-cart"></i></button>
                                </div>
                            </div>
                            <!-- end .card-game -->
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <nav aria-label="Page navigation example">
                <ul class="pagination mt-3 justify-content-end">
                    <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">4</a></li>
                    <li class="page-item"><a class="page-link" href="#">5</a></li>
                    <li class="page-item gap"><span class="page-link">...</span></li>
                    <li class="page-item"><a class="page-link" href="#">25</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
        </div>
    </section>
{% endblock %}
